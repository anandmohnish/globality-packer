{
  "_comment": "Builds an EBS-based AMI.",
  "variables": {
    "ansible_staging_dir": "/tmp/ansible-staging.{{timestamp}}",
    "aws_access_key":  "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "aws_secret_key":  "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "name": "globality",
    "source_ami": "{{env `AWS_SOURCE_AMI`}}",
    "ssh_username": "ubuntu",
    "ubuntu_version": "{{env `UBUNTU_VERSION` }}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "10m",
      "ami_groups": ["all"],
      "ami_name": "{{user `name`}}.{{user `aws_region`}}.{{user `ubuntu_version`}}.{{timestamp}}",
      "ami_description": "{{user `name`}} AMI ({{user `aws_region`}})",
      "run_tags": { "ami-create": "{{user `name`}}.{{user `aws_region`}}" },
      "tags": { "ami": "{{user `name`}}.{{user `aws_region`}}" }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{ .Vars }} sudo -E /bin/bash '{{ .Path }}'",
      "scripts": [
        "scripts/bootstrap.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p {{user `ansible_staging_dir`}}"
      ]
    },
    {
      "type": "file",
      "source": "ansible/",
      "destination": "{{user `ansible_staging_dir`}}"
    },
    {
      "type": "shell",
      "inline": [
        "cd {{user `ansible_staging_dir`}}",
        "ansible-galaxy install -r requirements.yml -p shared-roles --force"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/packer.yml",
      "extra_arguments": [
        "-e aws_region={{user `aws_region`}}",
        "--tags baseline"
      ],
      "staging_directory": "{{user `ansible_staging_dir`}}"
    },
    {
       "type": "shell",
       "inline": [
          "sudo reboot",
          "sleep 60"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p {{user `ansible_staging_dir`}}"
      ]
    },
    {
      "type": "file",
      "source": "ansible/",
      "destination": "{{user `ansible_staging_dir`}}"
    },
    {
      "type": "shell",
      "inline": [
        "cd {{user `ansible_staging_dir`}}",
        "ansible-galaxy install -r requirements.yml -p shared-roles --force"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/packer.yml",
      "extra_arguments": [
        "-vvv",
        "-e aws_region={{user `aws_region`}}",
        "--tags swapfile,codedeploy,cloudwatch,openresty,python,nodejs"
      ],
      "staging_directory": "{{user `ansible_staging_dir`}}"
    }
  ]
}
